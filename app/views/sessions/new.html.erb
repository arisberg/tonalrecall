
<div class= "login">
    <div class="form-group board">
        <h1>Welcome to Tonal Recall</h1>
        <h2>Create, share and revisit your favorite pedal setups</h2>
        <br/>
        <h4>Log In:</h4>
        <p><%= flash[:error] %></p>
        <%= form_tag('/login', method: :post) do %>
            <%= label_tag :name%>
            <%= text_field_tag :name, nil, class: "form-control" %>
            <br/>
            <%= label_tag :password %>
            <%= password_field_tag :password, nil,  class: "form-control" %>
            <br/>
            <%= submit_tag "Login", class: "btn btn-default" %>
        <% end %>
        <%= link_to "Sign Up", "/signup", class: "btn btn-default" %>
    </div>
</div>