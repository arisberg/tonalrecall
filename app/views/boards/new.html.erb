<p><%= flash[:error] %></p>
<div class="form-group board row col-sm-6">
        <%= form_for @board do |f| %>
            <h3><%= f.label :title %></h3>
            <h4>Give your new board a name</h4>
            <%= f.text_field :title, class: "form-control" %>
            <br/>
            <h3><%= f.label :audio %></h3>
            <h4>If you have a SoundCloud sample of this board, put the URL here</h4>
            <%= f.text_field :audio, class: "form-control" %>
            <br/>
            <h3><%= f.label :instrument %></h3>
            <h4>What are you playing through this board? Guitar? Bass? Keyboard?</h4>
            <%= f.text_field :instrument, class: "form-control" %>
            <div class="submit-btn">
            <%= f.submit "Create this Board", class: "btn btn-default" %>
            </div>
        <% end %>
</div>



